.box{
  width: 100%;
  height: 100%;
  display: flex;
	justify-content: space-around;
	border: 1px solid gainsboro;
}
.checkbox{
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.pic_name{
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  margin: 20rpx;
  margin-left: 40rpx;
  height: 260rpx;
  width: 200rpx;
}
.pic{
  height: 200rpx;
  width: 200rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.text{
  font-size: 16px;
  text-align: center;
}
.line{
  height: 1px;
  width: 100%;
  background-color: grey;
}
.weight{
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.input{
  margin-top: 20rpx;
  height: 30rpx;
  border: 1px solid gray;
  background-color: rgba(220, 220, 220, 0.493);
}
.bottom{
	background-color: white;
	position: fixed;
  display: flex;
	bottom: 0rpx;
	z-index: -1;
}
.huizong{
	background-color: white; 
  width: 450rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border: 1px solid gainsboro;
  font-size: 16px;
  font-weight: bold;
  margin: 0 auto;
}
